@model mvc.Models.TodoViewModel

@{
    ViewData["Title"] = "Create";
}


<div class="row mx-2 mb-2 justify-content-md-center">
    <div class="col"></div>
    <div class="col-md-4">
        <div class="card">
			<div class="card-body">
				<form asp-action="Create">
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<div class="form-group row">
						<label asp-for="Name" class="col-sm-3 col-form-label"></label>
						<input asp-for="Name" class="col-sm-9 form-control" />
						<span asp-validation-for="Name" class="text-danger"></span>
					</div>
					<div class="form-group form-check">
						<input asp-for="IsComplete" class="form-check-input"/>
						<label asp-for="IsComplete" class="form-check-label"></label>
					</div>
					<input type="submit" value="Create" class="btn btn-primary" />
					<a class="btn btn-primary" asp-action="Index">Cancel</a>
				</form>
			</div>
		</div>
    </div>
    <div class="col"></div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
