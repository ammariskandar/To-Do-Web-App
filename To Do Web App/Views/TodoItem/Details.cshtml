@model mvc.Models.TodoViewModel

@{
    ViewData["Title"] = "Details";
}


<div class="row mx-2 mb-2 justify-content-md-center">
    <div class="col"></div>
    <div class="col-md-4">
        <div class="card">
			<div class="card-body">
				<form>
					<div class="form-group row">
						<label asp-for="Name" class="col-sm-3 col-form-label"></label>
						<input asp-for="Name" class="col-sm-9 form-control-plaintext" readonly />
					</div>
					<div class="form-group form-check">
						<input asp-for="IsComplete" class="form-check-input" disabled/>
						<label asp-for="IsComplete" class="form-check-label"></label>
					</div>
					@if(!Model.IsComplete)
					{
						<a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
					}
					<a class="btn btn-primary" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
					<a class="btn btn-primary" asp-action="Index">Back</a>
				</form>
			</div>
		</div>
    </div>
    <div class="col"></div>
</div>