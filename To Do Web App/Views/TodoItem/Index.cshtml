@model IEnumerable<mvc.Models.TodoViewModel>

@{
    ViewData["Title"] = "TODOs";
}


<div class="row mx-2 mb-2 justify-content-md-center">
    <div class="col"></div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5>If You want to add a new To Do item, click on the Add Item button</h5>
                <a type="button" class="btn btn-success" asp-action="Create">Add Item</a>
            </div>
        </div>
    </div>
    <div class="col"></div>
</div>
<div class="row mx-2 mb-2 justify-content-md-center">
    <div class="col"></div>
    <div class="col-md-4">
        <h5>TO DO</h5>
        @foreach (var todoItem in Model)
        {
            @if(!todoItem.IsComplete)
            {
                <div class="card">
                    <div class="card-body">
                        <form>
                            <div class="form-group row">
                                <label asp-for="@todoItem.Name" class="col-sm-3 col-form-label"></label>
                                <input asp-for="@todoItem.Name" class="col-sm-9 form-control-plaintext" readonly />
                            </div>
                            <div class="form-group form-check">
                                <input asp-for="@todoItem.IsComplete" class="form-check-input" disabled/>
                                <label asp-for="@todoItem.IsComplete" class="form-check-label"></label>
                            </div>
                            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@todoItem.Id">Edit</a>
                            <a class="btn btn-primary" asp-action="Details" asp-route-id="@todoItem.Id">Details</a>
                            <a class="btn btn-primary" asp-action="Delete" asp-route-id="@todoItem.Id">Delete</a>
                        </form>
                    </div>
                </div>
            }
        }
    </div>
    <div class="col-md-4">
        <h5>DONE</h5>
        @foreach (var todoItem in Model)
        {
            @if(todoItem.IsComplete)
            {
                <div class="card">
                    <div class="card-body">
                        <form>
                            <div class="form-group row">
                                <label asp-for="@todoItem.Name" class="col-sm-3 col-form-label"></label>
                                <input asp-for="@todoItem.Name" class="col-sm-9 form-control-plaintext" readonly />
                            </div>
                            <div class="form-group form-check">
                                <input asp-for="@todoItem.IsComplete" class="form-check-input" disabled/>
                                <label asp-for="@todoItem.IsComplete" class="form-check-label"></label>
                            </div>
                            <a class="btn btn-primary" asp-action="Details" asp-route-id="@todoItem.Id">Details</a>
                            <a class="btn btn-primary" asp-action="Delete" asp-route-id="@todoItem.Id">Delete</a>
                        </form>
                    </div>
                </div>
            }
        }
    </div>
    <div class="col"></div>
</div>
