<!DOCTYPE html>
<html class="h-100" lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - mvc</title>
    <base href="/"/>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
</head>
<body class="h-100 d-flex flex-column">
    <header class="jumbotron text-center mb-0">
        <h1 class="display-4">To-Do App</h1>
        <p class="lead">A Website app built in ASP.NET Core</p>
    </header>

    <nav class="navbar navbar-expand-md navbar-dark bg-light mb-4">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">To Do Web App</a>
            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse">
                <div class="navbar-nav">
                    <a class="nav-link nav-item" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    @if(User.Identity.IsAuthenticated) 
                    {
                        <a class="nav-link nav-item" asp-area="" asp-controller="TodoItem" asp-action="Index">To Dos</a>
                    }
                </div>
                <partial name="_LoginPartial" />
            </div>
        </div>
    </nav>

    <main role="main" class="flex-grow-1 flex-shrink-0 mb-auto">
        @if(Context.Request.Path.ToString().Split("/")[1] == "Identity")
        {
            <div class="row mx-2 mb-2 justify-content-md-center">
                <div class="col"></div>
                <div class="col-md-10">
                    @RenderBody()
                </div>
                <div class="col"></div>
            </div>
        }
        else
        {
            @RenderBody()
        }
    </main>

    <footer class="text-light bg-secondary flex-shrink-0 mt-4">
        <div class="row justify-content-md-center">
            <div class="col"></div>
            <div class="col-md-10">
                <p class="text-center py-4">This page was developed by Ammar Iskandar.</p>
            </div>
            <div class="col"></div>
        </div>
    </footer>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha256-4+XzXVhsDmqanXGHaHvgh1gMQKX40OUvDEBTu8JcmNs=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
