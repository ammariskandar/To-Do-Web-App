@using Microsoft.AspNetCore.Identity
@inject SignInManager<WebAppUser> SignInManager
@inject UserManager<WebAppUser> UserManager

<div class="navbar-nav ml-auto">
@if (SignInManager.IsSignedIn(User))
{
    <a  class="nav-link nav-item" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
    <form  class="form-inline nav-item" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
        <button  type="submit" class="nav-link btn btn-link">Logout</button>
    </form>
}
else
{
    <a class="nav-link nav-item" asp-area="Identity" asp-page="/Account/Register">Register</a>
    <a class="nav-link nav-item" asp-area="Identity" asp-page="/Account/Login">Login</a>
}
</div>
